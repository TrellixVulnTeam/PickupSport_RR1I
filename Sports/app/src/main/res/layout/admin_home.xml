<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="admin home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView"/>
    <Button
            android:text="@string/brosweusers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/user"/>
    <Button
            android:text="@string/manageevents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/event"/>
    <Button
            android:text="@string/managevenues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/venue"/>

    <Button
            android:text="logout from this account"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/logout"/>
</LinearLayout>