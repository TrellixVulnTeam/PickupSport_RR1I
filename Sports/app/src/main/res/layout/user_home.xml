<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="Welcome!"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/nameView"/>

    <TextView
            android:text="My Scheduled Events"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView"/>

    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/hidetext"/>

    <ListView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:id="@+id/eventlist1"
    />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <Button android:text="Join Event"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:id="@+id/joinevent"
                />

        <Button android:text="Leave Event"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:id="@+id/leavevent"
                />

    </LinearLayout>

    <Button
            android:text="Log Out"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/logoutUser"
            android:layout_gravity="center_horizontal"/>

</LinearLayout>